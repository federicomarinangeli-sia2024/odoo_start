<odoo>
    <record id="view_beach_establishment_form" model="ir.ui.view">
        <field name="name">beach.establishment.form</field>
        <field name="model">beach.establishment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="region"/>
                        <field name="city"/>
                        <field name="concession_number"/>
                    </group>
                    <group>
                        <field name="umbrella_count_per_row"/>
                        <field name="row_count"/>
                    </group>
                    <group>
                        <field name="price_first_row"/>
                        <field name="price_other_rows"/>
                        <field name="starting_price" readonly="1"/>
                    </group>
                    <group>
                        <field name="image" widget="image"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="menu_beach_establishment_root" name="Stabilimenti" sequence="10"/>
    <menuitem id="menu_beach_establishment" name="Gestione Stabilimenti" parent="menu_beach_establishment_root" sequence="10" action="action_beach_establishment"/>
    
    <record id="action_beach_establishment" model="ir.actions.act_window">
        <field name="name">Stabilimenti</field>
        <field name="res_model">beach.establishment</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
