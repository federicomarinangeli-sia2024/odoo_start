<odoo>
    <!-- Form view inheritance to add 'regione' and 'localita' fields -->
    <record id="view_product_template_form_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <!-- Inserisci i campi Regione e Località dopo la categoria del prodotto -->
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="regione"/>
                <field name="localita"/>
            </xpath>
        </field>
    </record>

    <!-- Search view to add filters for 'regione' and 'localita' -->
    <record id="product_template_search_view_custom" model="ir.ui.view">
        <field name="name">product.template.search.custom</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='categ_id']" position="after">
                <filter string="Regione" name="filter_regione" domain="[('regione', '=', 'self')]"/>
                <filter string="Località" name="filter_localita" domain="[('localita', '=', 'self')]"/>
            </xpath>
        </field>
    </record>
</odoo>
