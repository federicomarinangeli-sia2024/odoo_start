<odoo>
    <!-- Vista a elenco (Tree) per Ombrelloni -->
    <record id="view_stabilimento_tree" model="ir.ui.view">
        <field name="name">umbrella.stabilimento.tree</field>
        <field name="model">umbrella.stabilimento</field>
        <field name="arch" type="xml">
            <tree string="Stabilimenti">
                <field name="name"/>
                <field name="regione"/>
                <field name="localita"/>
            </tree>
        </field>
    </record>

    <!-- Vista modulo (Form) per Stabilimenti -->
    <record id="view_stabilimento_form" model="ir.ui.view">
        <field name="name">umbrella.stabilimento.form</field>
        <field name="model">umbrella.stabilimento</field>
        <field name="arch" type="xml">
            <form string="Stabilimento">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="regione"/>
                        <field name="localita"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Definizione del menu principale -->
    <menuitem id="umbrella_availability_menu" name="Umbrella Availability" parent="website_sale.menu_website_shop"/>
    
    <!-- Definizione del sottomenu per i stabilimenti -->
    <menuitem id="menu_stabilimento" name="Stabilimenti" parent="umbrella_availability_menu" sequence="1" action="action_stabilimento"/>

    <!-- Azione per la gestione dei Stabilimenti -->
    <act_window id="action_stabilimento"
        name="Stabilimenti"
        res_model="umbrella.stabilimento"
        view_mode="tree,form"
        menu_id="menu_stabilimento"/>
</odoo>

